<div class = "center hero-unit">
  <div class = "row">
    <div class = "col-md-6 col-md-offset-3">
      <h1>Sign in</h1>
      <%= form_for(:session, url: sessions_path) do |f| %>
        <div class = "form-group">
          <%= f.label :email %><br>
          <%= f.text_field :email %>
        </div>
        <div class = "form-group">
          <%= f.label :password %><br>
          <%= f.password_field :password %>
        </div>

        <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
