<br><br>
<div class = "center hero-unit">
  <div class = "row">
    <div class = "col-md-6 col-md-offset-3">
      <%= form_for @product do |f| %>
      
        <div class = "form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name%>
        </div>

        <div class = "form-group">
          <%= f.label :description %><br>
          <%= f.text_area :description %>
        </div>
        
        <div class = "fileUpload btn btn-primary">
          <span>Upload photo <%= f.file_field :product_photo, class: "upload" %> </span>
          <br>
        </div>
        <div class = "form-group">
          <%= f.submit "Add new product", class: "btn btn-large btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>

